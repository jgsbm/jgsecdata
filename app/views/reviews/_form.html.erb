<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :evaluation %><br>
      <%= f.number_field :evaluation, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment, :class => 'form-control' %>
    </div>
    <!-- <div class="field">
      <%= f.label :product_code %><br>
      <%= f.text_field :product_code, :class => 'form-control' %>
    </div> -->
    <div class="field">
      <%= f.label :product_id %><br>
      <%= f.collection_select :product_code, Product.all, :product_code, :product_name, :required => true, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :customer_id %><br>
      <%= f.collection_select :customer_id, Customer.all, :id, :customer_name, :required => true, :class => 'form-control' %>
    </div>
    <!-- <div class="field">
      <%= f.label :version %><br>
      <%= f.number_field :version, :class => 'form-control' %>
    </div> -->
    <br>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary form-control' %>
    </div>
  </div>
<% end %>
