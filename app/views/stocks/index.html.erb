<h1>在庫情報</h1>

<div align="right">
  <%= link_to '新規在庫情報作成', new_stock_path, :class => 'btn btn-primary' %>
</div>
<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>在庫量</th>
      <th>商品名</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th>バージョン</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.stock %></td>
        <!-- <td><%= stock.product %></td> -->
        <% unless stock.product == nil %>
          <td><%= stock.product.product_name %></td>
        <% else %>
          <td>DELETED PRODUCT</td>
        <% end %>
        <td><%= stock.created_at %></td>
        <td><%= stock.updated_at %></td>
        <td><%= stock.version %></td>
        <td>
          <%= link_to '編集', edit_stock_path(stock), :class => 'btn btn-warning' %>
          <%= link_to '削除', stock, method: :delete, data: { confirm: '削除していいですか？' }, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
