<%= form_for(@stock) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
      <% @stock.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="field">
      <%= f.label :stock %><br>
      <%= f.number_field :stock, :required => true, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :product_id %><br>
      <%= f.collection_select :product_id, Product.all, :id, :product_name, :required => true, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :version %><br>
      <%= f.number_field :version, :required => true, :class => 'form-control' %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary form-control' %>
    </div>
  </div>
<% end %>
