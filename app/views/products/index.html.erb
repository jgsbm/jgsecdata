<h1>商品情報</h1>

<% if Rails.env == 'production' %>
  <p>
    データソース：<%= Product.data_source %>
  </p>
<% end %>

<div align="right">
  <%= link_to '新規商品情報作成', new_product_path, :class => 'btn btn-primary' %>
</div>
<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品コード</th>
      <th>商品名</th>
      <th>価格</th>
      <th>説明</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th>バージョン</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_code %></td>
        <td><%= product.product_name %></td>
        <td><%= product.price %></td>
        <td><%= product.detail %></td>
        <td><%= product.created_at %></td>
        <td><%= product.updated_at %></td>
        <td><%= product.version %></td>
        <td>
          <%= link_to '編集', edit_product_path(product), :class => 'btn btn-warning' %>
          <%= link_to '削除', product, method: :delete, data: { confirm: '削除していいですか？' }, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
